<?xml version="1.0" encoding="utf-8" ?>
<database name="PortfolioData">
  <table name="PortfolioEntry">
    <primary_key column_index="0" />
    <column name="_id" type="INTEGER">
    </column>
    <column name="coinId" type="INTEGER">
      <not_null />
      <unique />
    </column>
    <column name="holdings" type="REAL">
      <default>0</default>
    </column>
    <column name="averageBuyPrice" type="REAL">
    </column>
  </table>
  <table name="PortfolioEntryTransaction">
    <primary_key column_index="0" />
    <column name="_id" type="INTEGER">
    </column>
    <column name="portfolioEntryId" type="INTEGER">
      <not_null />
    </column>
    <column name="coinTransactionId" type="INTEGER">
      <not_null />
      <unique />
    </column>
  </table>
  <table name="TransactionType">
    <primary_key column_index="0" />
    <column name="_id" type="INTEGER">
    </column>
    <column name="name" type="VARCHAR">
      <length>50</length>
      <not_null />
      <unique />
    </column>
  </table>
  <table name="CoinTransaction">
    <primary_key column_index="0" />
    <column name="_id" type="INTEGER">
    </column>
    <column name="transactionTypeId" type="INTEGER">
      <not_null />
    </column>
    <column name="amount" type="REAL">
      <not_null />
    </column>
    <column name="pricePerCoin" type="REAL">
      <not_null />
    </column>
    <column name="unixTimestamp" type="INTEGER">
      <not_null />
    </column>
  </table>
</database>
